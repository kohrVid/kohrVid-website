<% provide(:title, 'Blog')%>
<%= render "layouts/blog_login_logout" %>
<h1>Blog</h1>
<%= will_paginate%>
	<% @posts.each do |post|%>
		<h3><%= link_to post.title, post %></h3>
		<p>
			<%= post.body.to_s.truncate(500) %>
		</p>
		<% if admin_is_logged_in %>
			<%= link_to "Edit", edit_post_path(post) %>

			<%= link_to "Delete", post, method: :delete, data: { cofirm: "Are you sure? This cannot be undone!"} %>
		<%end%>
		<hr />
	<%end%>
<%= will_paginate%>
