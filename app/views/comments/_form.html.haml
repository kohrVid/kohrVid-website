= form_for [@post, @comment] do |f|
  = f.hidden_field :parent_id
  .general-form.container-fluid
    %fieldset.row
      .col-lg-2.col-md-2.col-sm-3.col-xs-2
        = f.label :author, "Posting as:"
      .col-lg-4.col-md-4.col-sm-9.col-xs-10.display-inline
        %strong
          = @comment.author
        - unless current_user
          (#{ link_to "Log In", login_path, class: "smaller_text" unless current_user } |&nbsp;
          #{ link_to "Sign Up", sign_up_path, class: "smaller_text" })
    .row
      .col-lg-12.col-md-12.col-sm-12.col-xs-12.display-inline
        Please use #{ link_to "Markdown", "https://github.com/adam-p/markdown-here/wiki/Markdown-Cheatsheet" } to format your comments.
    %fieldset.row
      .col-lg-2.col-md-2.col-sm-12.col-xs-12
        = f.label :body, "Comment:"
      .col-lg-8.col-md-9.col-sm-12.col-xs-12
        = f.text_area :body, rows: 10
    %fieldset.row
      .col-lg-2.col-md-2.col-sm-12.col-xs-12
      .col-lg-2.col-md-2.col-sm-12.col-xs-12
        .small-centre
          = recaptcha_tags
    %fieldset.row
      .col-lg-2.col-md-2.col-sm-12.col-xs-12
      .col-lg-8.col-md-9.col-sm-12.col-xs-12
        = f.button "Submit", class: "button"
