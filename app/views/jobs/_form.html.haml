= form_for(@job) do |f|
  %fieldset.row.field.m-10px-bottom
    .col-md-2.col-sm-2.col-xs-12
      = f.label :title, t('jobs.form.title'), id: 'title'
    .col-md-10.col-sm-10.col-xs-12
      = f.text_field :title, tabindex: 1, 'aria-labelledby': 'title',
        class: 'width-100p glowing-border'

  %fieldset.row.field.m-10px-bottom
    .col-md-2.col-sm-2.col-xs-12
      = f.label :company_name, t('jobs.form.company_name'), id: 'company_name'
    .col-md-10.col-sm-10.col-xs-12
      = f.text_field :company_name, tabindex: 2, 'aria-labelledby': 'company_name',
        class: 'width-100p glowing-border'

  %fieldset.row.field.m-10px-bottom
    .col-md-2.col-sm-2.col-xs-12
      = f.label :company_website, t('jobs.form.company_website'), id: 'company_website'
    .col-md-10.col-sm-10.col-xs-12
      = f.text_field :company_website, tabindex: 3, 'aria-labelledby': 'company_website',
        class: 'width-100p glowing-border'

  %fieldset.row.field.m-10px-bottom
    .col-md-2.col-sm-2.col-xs-12
      = f.label :start_date, t('jobs.form.start_date'), id: 'start_date'
    .col-md-10.col-sm-10.col-xs-12
      = f.date_field :start_date, tabindex: 4, 'aria-labelledby': 'start_date',
        class: 'width-100p glowing-border'

  %fieldset.row.field.m-10px-bottom
    .col-md-2.col-sm-2.col-xs-12
      = f.label :end_date, t('jobs.form.end_date'), id: 'end_date'
    .col-md-10.col-sm-10.col-xs-12
      = f.date_field :end_date, tabindex: 5, 'aria-labelledby': 'end_date',
        class: 'width-100p glowing-border'

  %fieldset.row.field.m-10px-bottom
    .col-md-2.col-sm-2.col-xs-12
      = f.label :description, t('jobs.form.description'), id: 'description'
    .col-md-10.col-sm-10.col-xs-12
      = f.text_area :description, tabindex: 6, 'aria-labelledby': 'description',
        class: 'width-100p glowing-border'

  %fieldset.row.field.m-10px-bottom
    .col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-2.col-xs-12
      = f.submit "Save", class: "button"

