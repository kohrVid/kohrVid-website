<% provide(:title, @user.name) %>
<h1><%= @user.name%></h1>
<div class = "right-align">
	<%= link_to "Log Out", destroy_user_session_path, method: "delete" unless !user_signed_in? %>
</div>
<table>
	<tr>
		<td><strong>ID:</strong></td>
		<td><%= @user.id %></td>
	</tr>
	<tr>
		<td><strong>Name:</strong></td>
		<td><%= @user.name %></td>
	</tr>
	<% if current_user?(@user) || admin_is_logged_in %>
		<tr>
			<td><strong>Email Address:</strong></td>
			<td><%= @user.email %></td>
		</tr>
	<%end%>
	<tr>
		<td><strong>Bio:</strong></td>
		<td><%= @user.bio %></td>
	</tr>
</table>

<%= link_to "Back to All Users", users_path %>
<% unless !user_signed_in? %>
	<% if admin_is_logged_in && current_user %>
		 | <%= link_to "Update Account", edit_user_path(@user) %>
	<%else%>
		 | <%= link_to "Update Account", edit_user_registration_path %>
	<%end%>
	<% if current_user || admin_is_logged_in %>
		 | <%= link_to "Delete Account", @user, method: :delete, data: { confirm: 'Are you sure?' } %> 
	<%end%>
<%end%>

