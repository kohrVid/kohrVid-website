<%= form_for(@user) do |f| %>
	<table>
		<tr>
			<td><%= f.label :name, "Name:"%></td>
		</tr>
		<tr>
			<td><%= f.text_field :name%></td>
		</tr>
		<tr></tr>
		<tr>
			<td><%= f.label :email, "Email Address:"%></td>
		</tr>
		<tr>
			<td><%= f.email_field :email%></td>
		</tr>
		<tr></tr>

		<tr>
			<td><%= f.label :password, "Password:" %></td>
		</tr>
		<tr>
			<td><%= f.password_field :password%></td>
		</tr>
		<tr>
		</tr>

		<tr>
			<td><%= f.label :password_confirmation, "Confirm Password:"%></td>
		</tr>
		<tr>
			<td><%= f.password_field :password_confirmation %></td>
		</tr>
		<tr>
			<td><%= f.submit "Submit", class: "button" %></td>
		</tr>
	</table>

<%end%>
