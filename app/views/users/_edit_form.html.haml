= form_for(@user) do |f|
  .general_form
    %fieldset.row
      .col-lg-2.col-md-2.col-sm-12.col-xs-12
        = f.label :name, "Name:"
      .col-lg-8.col-md-9.col-sm-12.col-xs-12
        = f.text_field :name
    %fieldset.row
      .col-lg-2.col-md-2.col-sm-12.col-xs-12
        = f.label :email, "Email Address:"
      .col-lg-8.col-md-9.col-sm-12.col-xs-12
        = f.email_field :email
    %fieldset.row
      .col-lg-2.col-md-2.col-sm-12.col-xs-12
        = f.label :password, "Password:"
      .col-lg-8.col-md-9.col-sm-12.col-xs-12
        - if @user == current_user
          = link_to "Reset password", edit_password_path(@user)
        - else
          = link_to "Reset password", new_password_path(@user)
    %fieldset.row
      .col-lg-2.col-md-2.col-sm-12.col-xs-12
        = f.label :bio, "Bio:"
      .col-lg-8.col-md-9.col-sm-12.col-xs-12
        = f.text_area :bio, rows: 10
    %fieldset.row
      .col-lg-8.col-md-9.col-md-offset-2.col-sm-12.col-xs-12
        = f.button "Submit", class: "button"
