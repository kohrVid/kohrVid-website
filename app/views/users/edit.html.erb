<% provide(:title, "Update User") %>
<h1>Update Profile</h1>

<div class = "right-align">
	<%= link_to "Log Out", destroy_user_session_path, method: "delete" unless !user_signed_in? %>
</div>
<%= render 'form' %>

<% if current_user || admin_is_logged_in %>
	<%= link_to "Delete Account", @user, method: :delete, data: { confirm: 'Are you sure?' } %> | 
<%end%>
<%= link_to "Back to All Users", users_path %>


