<% if flash.present? %>
	<div class = "alerts">
		<% flash.each do |key, value| %>
			<div class = "<%= key %>">
				<h3><%= value %></h3>
				<a href = "#" class = "close">&times;</a>
				<% if @object.present? && @object.errors.any? %>
					The contact form contains <%= pluralize(@object.errors.count, "error")%>.
					<ul>
						<% @object.errors.full_messages.each do |msg|%>
							<li><%=msg%></li>
						<%end%>
					</ul>
				<%end%>
			</div>
		<%end%>
	</div>
<%end%>
