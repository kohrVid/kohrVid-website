<div class = "right-align">
	<% if current_user && admin_is_logged_in %>
		<%= link_to "New User", new_user_path if (params[:controller] == "users" && params[:action] != "new") %>
		<%= link_to "New Post", new_post_path if (params[:controller] == "posts" && params[:action] != "new") %> | 
	<%end%>
	<%= link_to "Log In", log_in_path unless (params[:controller] != "posts" || user_signed_in?) %>
	<%= link_to "Log Out", log_out_path unless (!user_signed_in?) %>
</div>
